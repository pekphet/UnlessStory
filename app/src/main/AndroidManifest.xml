<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pekphet.unlessstory" >
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.activity.HomeActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activity.BagActivity" android:screenOrientation="portrait"/>
        <activity android:name=".view.activity.GameActivity" android:screenOrientation="portrait"/>
        <activity android:name=".view.activity.SettingActivity" android:screenOrientation="portrait"/>
        <activity android:name=".view.activity.SkillActivity" android:screenOrientation="portrait"/>
        <activity android:name=".view.activity.SplashActivity" android:screenOrientation="portrait"/>
        
    </application>

</manifest>
